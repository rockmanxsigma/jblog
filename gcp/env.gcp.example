# Configuration pour Google Cloud Platform
# Copiez ce fichier vers .env et modifiez les valeurs selon votre déploiement

# Configuration du projet GCP
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT=jgazette-deploy@your-project-id.iam.gserviceaccount.com

# Configuration de l'application
NODE_ENV=production
PORT=5000

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Configuration CORS (sera mis à jour automatiquement par le script de déploiement)
CORS_ORIGIN=https://jgazette-web-XXXXX-uc.a.run.app

# Configuration des uploads
UPLOAD_PATH=/tmp/uploads

# Configuration MongoDB (sera mis à jour avec les secrets)
MONGODB_URI=mongodb://user:password@host:port/database

# Configuration des ressources Cloud Run
API_MEMORY=2Gi
API_CPU=2
API_MAX_INSTANCES=10
API_MIN_INSTANCES=1

WEB_MEMORY=1Gi
WEB_CPU=1
WEB_MAX_INSTANCES=10
WEB_MIN_INSTANCES=1

# Configuration Artifact Registry
ARTIFACT_REGISTRY_REPO=jgazette-repo
ARTIFACT_REGISTRY_LOCATION=us-central1
